config interface 'loopback'
    option ifname 'lo'
    option proto 'static'
    option ipaddr '127.0.0.1'
    option netmask '255.0.0.0'

config interface 'lan'
    option ifname 'eth0.1'
    option force_link '1'
    option proto 'static'
    option ipaddr '172.17.48.1'
    option netmask '255.255.255.0'
    option ip6addr 'fd87::7/128'

config interface 'wan'
    option ifname 'eth0.2'
    option proto 'static'
    option ipaddr '172.17.49.1'
    option netmask '255.255.255.255'
    option ip6addr 'fd87::7/128'

config interface 'wlan0'
    option ifname 'wlan0'
    option proto 'static'
    option ipaddr '172.17.50.1'
    option netmask '255.255.255.255'
    option ip6addr 'fd87::7/128'

config interface 'wlan1'
    option ifname 'wlan1'
    option proto 'static'
    option ipaddr '172.17.51.1'
    option netmask '255.255.255.255'
    option ip6addr 'fd87::7/128'

